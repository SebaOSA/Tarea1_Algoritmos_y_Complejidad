# Variables
CXX = g++
CXXFLAGS = -std=c++17 -O2
TARGETS = BubbleSort QuickSort MergeSort Sort GenArray

# Regla por defecto: compilar todos los programas
all: $(TARGETS)

# Regla para compilar BubbleSort.cpp
BubbleSort: BubbleSort.o
	$(CXX) $(CXXFLAGS) -o BubbleSort BubbleSort.o

# Regla para compilar QuickSort.cpp
QuickSort: QuickSort.o
	$(CXX) $(CXXFLAGS) -o QuickSort QuickSort.o

# Regla para compilar MergeSort.cpp
MergeSort: MergeSort.o
	$(CXX) $(CXXFLAGS) -o MergeSort MergeSort.o

# Regla para compilar Sort.cpp (std::sort)
Sort: Sort.o
	$(CXX) $(CXXFLAGS) -o Sort Sort.o

# Regla para compilar GenArray.cpp
GenArray: GenArray.o
	$(CXX) $(CXXFLAGS) -o GenArray GenArray.o

# Regla general para compilar archivos .cpp en archivos .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Reglas para ejecutar los programas
run-bubble: BubbleSort
	./BubbleSort

run-quick: QuickSort
	./QuickSort

run-merge: MergeSort
	./MergeSort

run-sort: Sort
	./Sort

run-gen: GenArray
	./GenArray

# Ejecutar todos los programas de sorting
run-all: run-bubble run-quick run-merge run-sort

# Regla para limpiar archivos generados
clean:
	rm -f *.o $(TARGETS)

